@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="app">
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/app.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>First Page</title>
</head>
<body data-ng-controller="AppController">
    <h2 style="text-align:center">All Users</h2>
    <br />
    <form name="addOwner" style="margin-left:40%;">
        <input type="text" style="width:200px;display:inline" class="form-control" id="name" placeholder="Enter pet owners name" data-ng-model="Owner.Name" required />
        <input style="display:inline" type="submit" value="Add" data-ng-click="add()" class="btn btn-primary" />
    </form>
    <br />
    <hr />
    <br />
    <table ng-table="tableParams" class="table table-bordered table-hover" style="width:500px;margin-left:auto;margin-right:auto;">
        <tr>
            <th ng-show="onId">#</th>
            <td>Name</td>
            <th>Pets Count</th>
        </tr>
        <tr ng-repeat="owner in owners">
            <td ng-show="onId">{{ owner.Id }}</td>
            <td><a href="/SecondPage/Index/{{owner.Id}}">{{ owner.Name }}</a></td>
            <td>{{ owner.PetCount }}<button style="float:right;" ng-click="delete($index)">Delete</button></td>
        </tr>
    </table>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
